@model OSS.Models.tblDocument

@{
    ViewBag.Title = "Delete";
}

<section class="content">
    <div class="container-fluid">
        <!-- Basic Examples -->
        <div class="row clearfix demo-icon-container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="body">
                        <div class="form-horizontal">
                            <a title="Back To List" href='@Url.Action("Index", "Document")' class="btn btn-danger btn-circle waves-effect waves-circle waves-float">
                                <i class="material-icons">arrow_back </i>
                            </a> <b class="icon-name title-lable">Delete Document</b>

                            <hr />
                            <h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
                            <div class="row body clearfix">
                                <div class="col-sm-2">
                                    <div class="form-group form-float">
                                        <div class="">
                                            <label>Document Name</label><br />
                                            @Html.DisplayFor(model => model.DocumentName)

                                        </div>
                                    </div>
                                </div>

                            </div>


                            <hr />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <button type="submit" class="btn btn-danger btn-sm waves-effect">
                                                <i class="material-icons">delete</i>
                                                <span>Delete</span>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
